{
    "manifest_version": 2,
    "name": "Control YouTube Shorts",
    "description": "Video controls for YouTube Shorts",
    "version": "0.3",
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "16.png",
        "48": "48.png",
        "64": "64.png",
        "128": "128.png"
    }
}