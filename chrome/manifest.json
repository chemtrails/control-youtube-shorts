{
    "manifest_version": 3,
    "name": "Control YouTube Shorts",
    "description": "Video controls for YouTube Shorts",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "48.png",
        "default_title": "Control YouTube Shorts"
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "16.png",
        "48": "48.png",
        "64": "64.png",
        "128": "128.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["48.png"],
            "matches": ["<all_urls>"]
        }
    ]
}